<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_first" />
    <TextView
        android:id="@+id/txtSelectJps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/textview_first"
        app:layout_constraintTop_toBottomOf="@id/textview_first"
        android:text="Select JackPots"/>
    <TextView
        android:id="@+id/txtSelectStakes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/textview_first"
        app:layout_constraintTop_toBottomOf="@id/textview_first"
        android:text="Select Stakes"/>
    <Spinner
        android:id="@+id/spnJps"
        android:layout_width="90dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/txtSelectJps"
        app:layout_constraintTop_toBottomOf="@id/txtSelectJps"/>
    <Spinner
        android:id="@+id/spnStakes"
        android:layout_width="90dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="@id/txtSelectStakes"
        app:layout_constraintTop_toBottomOf="@id/txtSelectStakes"/>
</androidx.constraintlayout.widget.ConstraintLayout>